<ul>
  {{#each burger_data}}
  {{#unless this.devoured}}
  <div class="col-md-9">
    {{this.id}} {{this.burger_name}}
  </div>
  <div class="col-md-3">
    <form class="devour-form">
      <input type="hidden" class="burger_id" type="text" value="{{this.id}}">
      <button type="submit" class="btn btn-default">Devour It</button>
    </form>
  </div>

  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burger</h2>

<ul>
  {{#each burger_data}}
  {{#if devoured}}
  {{this.id}} {{this.burger_name}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form action="/burgers/create" method="POST" class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" class="form-control" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>